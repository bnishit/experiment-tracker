generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Experiment {
  id            String    @id @default(cuid())
  name          String
  expParameter  String
  userGroup     String
  numbersList   String[]  @default([])
  liveDate      DateTime
  platforms     String[]  @default([])
  context       String?   @db.Text
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relationships
  versions      Version[]
  
  @@index([name])
  @@index([expParameter])
  @@index([userGroup])
  @@index([isActive])
  @@index([liveDate])
  @@index([isActive, liveDate])
}

model Version {
  id            String     @id @default(cuid())
  experimentId  String
  changeDate    DateTime
  changes       String     @db.Text
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  // Relationships
  experiment    Experiment  @relation(fields: [experimentId], references: [id], onDelete: Cascade)
  
  @@index([experimentId])
  @@index([changeDate])
  @@index([experimentId, changeDate])
}

